<%- include('partials/header') -%>
    <link rel="stylesheet" href="/css/post.css">
    <div class="container form-container sign-in-container">
        <h1>
            <%= title %>
        </h1>
        <% if (edit) { %>
            <a href="http://localhost:3000/editProblem/<%=P_id%>" class="btn"> Edit <i class="fa-solid fa-pencil"></i></a>
            <% } %>
        <p>
            <%- problemStatement -%>
            <div data-pym-src="https://www.jdoodle.com/embed/v1/b80d594d4304683e"></div>
        </p>
        <a id="registerBtn" class="btn">See <span class="highlight">Editorial</span></a>
        <div id="registerModal" class="modal animated fadeIn">
            <div class="modal-content">
                <a id="registerBtn2"><i class="fa-solid fa-circle-xmark close"></i></a>
                <div class="modal-form">
                    <h1>Editorial</h1>
                    <p>
                        <%- editorial -%>
                    </p>
                </div>
            </div>
        </div>
    </div>
    <script src="https://www.jdoodle.com/assets/jdoodle-pym.min.js" type="text/javascript"> </script>
    <script src="/js/editorial.js"></script>
    <%- include('partials/footer') -%>